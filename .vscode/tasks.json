{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "1. Compilar & Ejecutar",
			"detail": "Compila y ejecuta el archivo actual",
			"type": "shell",
			"command": "",
			"dependsOrder": "sequence",
			"dependsOn": [
				"4. Compilar",
				"2. Ejecutar"
			],
			"presentation": {
				"focus": true,
				"reveal": "always"
			},
			"problemMatcher": [
				"$ada"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "2. Ejecutar",
			"detail": "Ejecuta el programa compilado anteriormente",
			"type": "shell",
			"windows": {
				"command": "cd ${fileDirname} && IF EXIST \"entrada.txt\" (${fileBasenameNoExtension}.exe<entrada.txt) ELSE (${fileBasenameNoExtension}.exe)"
			},
			"command": "cd ${fileDirname} && ./${fileBasenameNoExtension}",
			"presentation": {
				"focus": true,
				"reveal": "always"
			},
			"problemMatcher": [
				"$ada"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "3. Limpieza",
			"detail": "Elimina todos los archivos generados por GNAT",
			"type": "shell",
			"command": "cd ${fileDirname} && gnatclean ${fileBasenameNoExtension}",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": [
				"$ada"
			]
		},
		{
			"label": "4. Compilar",
			"detail": "Compila el archivo actual",
			"type": "shell",
			"command": "cd ${fileDirname} && gnat make -a ${fileBasename} -gnatW8 && gnatclean ${fileBasenameNoExtension} -c",
			"args": [],
			"presentation": {
				"clear": true
			},
			"problemMatcher": [
				"$ada"
			]
		},
		{
			"label": "5. Compilar para depuración",
			"detail": "Compila de manera que se pueda debuggear después",
			"type": "shell",
			"command": "cd ${fileDirname} && gnat make -a ${fileBasename} -g -gnatW8 && gnatclean ${fileBasenameNoExtension} -c",
			"args": [],
			"presentation": {
				"clear": true
			},
			"problemMatcher": [
				"$ada"
			]
		},
		{
			"type": "ada",
			"compound": [
				"Build main - src/nuevo.adb",
				"Run main - src/nuevo.adb"
			],
			"label": "ada: Build and run main - src/nuevo.adb"
		}
	]
}